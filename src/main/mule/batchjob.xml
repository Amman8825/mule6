	<http:listener-config name="HTTP_Listener_config1" doc:name="HTTP Listener config" doc:id="75d4e6c8-2a30-47b1-81d5-8ff06a51a28f" >
		<http:listener-connection host="0.0.0.0" port="8081" />
	</http:listener-config>
	<flow name="batchjobFlow" doc:id="16b0951c-e25a-4835-86ef-32a851468cae" >
		<http:listener doc:name="Listener" doc:id="b97d75ae-034d-40f2-8193-37f072908dff" config-ref="HTTP_Listener_config1" path="/test"/>
		<logger level="INFO" doc:name="Logger" doc:id="4535a7cf-a52c-4c07-94e2-2c2558b94590" message="start flow"/>
		<set-payload doc:name="Set Payload" doc:id="93ff8669-f234-42cd-a2fe-7feba86598f5" value='1,1,1,1,"a"'/>
		<batch:job jobName="batchjobBatch_Job" doc:id="8a5fdf80-ce98-44de-bf2a-a1830966447a" >
			<batch:process-records >
				<batch:step name="Batch_Step" doc:id="96a908ca-0fbd-4359-8e0d-4382ddc46850" >
					<set-payload value="payload * 10" doc:name="payload * 10" doc:id="6b8385a3-edea-42b1-a46a-ca647968071a" />
