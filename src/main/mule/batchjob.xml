						<logger level="INFO" doc:name="Logger" doc:id="fd527f3d-9cf1-4e65-829b-83519dd0a970" message='"batch step 1 value are ::::::" ++ as string'/>
					</batch:aggregator>
				</batch:step>
			</batch:process-records>
			<batch:on-complete >
				<logger level="INFO" doc:name="Logger" doc:id="41e4215b-b764-4a53-99f7-541a4fc56884" message="end flow"/>
			</batch:on-complete>
		</batch:job>
	</flow>
